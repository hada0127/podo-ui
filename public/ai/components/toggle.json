{
  "name": "Toggle",
  "category": "atom",
  "description": "Toggle switch input with React component",
  "scssOnly": false,
  "import": {
    "react": "import { Toggle } from 'podo-ui'",
    "scss": "@use 'podo-ui/scss/form/toggle'"
  },
  "props": [
    { "name": "checked", "type": "boolean", "required": false, "description": "Checked state" },
    { "name": "label", "type": "string", "required": false, "description": "Label text" },
    { "name": "disabled", "type": "boolean", "required": false, "description": "Disabled state" },
    { "name": "onChange", "type": "(e: ChangeEvent) => void", "required": false, "description": "Change callback" }
  ],
  "htmlUsage": {
    "basic": "<input type=\"checkbox\" class=\"toggle\" />",
    "withLabel": "<label>\n  <input type=\"checkbox\" class=\"toggle\" />\n  <span>Enable notifications</span>\n</label>"
  },
  "states": [
    "off (gray background)",
    "on (info/blue background)",
    "disabled",
    "checked:disabled"
  ],
  "features": [
    "33x20px switch size",
    "Smooth slide animation",
    "Focus outline",
    "Dark mode support"
  ],
  "examples": [
    {
      "title": "React Toggle",
      "code": "<Toggle label=\"Dark mode\" checked={enabled} onChange={(e) => setEnabled(e.target.checked)} />"
    },
    {
      "title": "React Toggle disabled",
      "code": "<Toggle label=\"Feature locked\" disabled />"
    },
    {
      "title": "HTML Basic toggle",
      "code": "<input type=\"checkbox\" class=\"toggle\" />"
    },
    {
      "title": "HTML With label",
      "code": "<label>\n  <input type=\"checkbox\" class=\"toggle\" />\n  <span>Dark mode</span>\n</label>"
    }
  ],
  "related": ["checkbox-radio", "field"]
}
