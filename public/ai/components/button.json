{
  "name": "Button",
  "category": "atom",
  "description": "Styled button with themes and variants",
  "documentation": "https://podoui.com/components/button",
  "scssOnly": false,
  "import": {
    "react": "import { Button } from 'podo-ui'",
    "scss": "@use 'podo-ui/scss/button/class'"
  },
  "props": [
    { "name": "theme", "type": "'default' | 'primary' | 'default-deep' | 'info' | 'link' | 'success' | 'warning' | 'danger'", "required": false, "default": "default", "description": "Theme color" },
    { "name": "variant", "type": "'solid' | 'fill' | 'border' | 'text'", "required": false, "default": "solid", "description": "Style variant" },
    { "name": "size", "type": "'xxs' | 'xs' | 'sm' | 'md' | 'lg'", "required": false, "default": "sm", "description": "Size" },
    { "name": "icon", "type": "string", "required": false, "description": "Left icon class name" },
    { "name": "rightIcon", "type": "string", "required": false, "description": "Right icon class name" },
    { "name": "loading", "type": "boolean", "required": false, "description": "Loading state" },
    { "name": "disabled", "type": "boolean", "required": false, "description": "Disabled state" },
    { "name": "textAlign", "type": "'left' | 'center' | 'right'", "required": false, "description": "Text alignment" }
  ],
  "cssClasses": {
    "themes": [
      { "class": "(default)", "description": "Gray button" },
      { "class": "primary", "description": "Primary purple" },
      { "class": "default-deep", "description": "Dark gray" },
      { "class": "info", "description": "Blue" },
      { "class": "link", "description": "Light blue" },
      { "class": "success", "description": "Teal/green" },
      { "class": "warning", "description": "Orange" },
      { "class": "danger", "description": "Red" }
    ],
    "variants": [
      { "class": "(default)", "description": "Solid background" },
      { "class": "fill", "description": "Light background with border" },
      { "class": "border", "description": "Transparent with border" },
      { "class": "text", "description": "Text only, no background/border" }
    ],
    "sizes": [
      { "class": "xxs", "description": "Extra extra small" },
      { "class": "xs", "description": "Extra small" },
      { "class": "(default)", "description": "Small (default)" },
      { "class": "md", "description": "Medium" },
      { "class": "lg", "description": "Large" }
    ],
    "alignment": [
      { "class": "text-left", "description": "Left-align content" },
      { "class": "text-right", "description": "Right-align content" }
    ]
  },
  "states": [
    "hover (lighter/darker)",
    "active/pressed",
    "focus-visible (outline ring)",
    "disabled (grayed out)",
    "loading (shows spinner)"
  ],
  "examples": [
    {
      "title": "React Primary",
      "code": "<Button theme=\"primary\">Submit</Button>"
    },
    {
      "title": "React with Icon",
      "code": "<Button theme=\"success\" icon=\"icon-check\">Confirm</Button>"
    },
    {
      "title": "React Loading",
      "code": "<Button theme=\"primary\" loading>Processing...</Button>"
    },
    {
      "title": "React Sizes",
      "code": "<Button theme=\"primary\" size=\"lg\">Large</Button>"
    },
    {
      "title": "HTML Primary solid",
      "code": "<button class=\"primary\">Submit</button>"
    },
    {
      "title": "HTML Success outline",
      "code": "<button class=\"success border\">Approve</button>"
    },
    {
      "title": "HTML With icon",
      "code": "<button class=\"primary\"><i class=\"icon-save\"></i> Save</button>"
    }
  ],
  "related": []
}
