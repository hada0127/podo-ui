{
  "name": "podo-ui",
  "version": "0.3.13",
  "type": "module",
  "author": "hada0127 <work@tarucy.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hada0127/podo-ui.git"
  },
  "bugs": {
    "url": "https://github.com/hada0127/podo-ui/issues"
  },
  "homepage": "https://podoui.com",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "scss",
    "global.scss",
    "global.d.ts",
    "mixin.scss",
    "vite-fonts.scss",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./react/atom/*": {
      "types": "./dist/react/atom/*.d.ts",
      "import": "./dist/react/atom/*.js",
      "default": "./dist/react/atom/*.js"
    },
    "./react/molecule/*": {
      "types": "./dist/react/molecule/*.d.ts",
      "import": "./dist/react/molecule/*.js",
      "default": "./dist/react/molecule/*.js"
    },
    "./global.scss": {
      "types": "./global.d.ts",
      "default": "./global.scss"
    },
    "./mixin.scss": {
      "types": "./global.d.ts",
      "default": "./mixin.scss"
    },
    "./vite-fonts.scss": {
      "types": "./global.d.ts",
      "default": "./vite-fonts.scss"
    },
    "./scss/*": {
      "types": "./global.d.ts",
      "default": "./scss/*"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:lib": "npm run clean && tsc -p tsconfig.build.json && npm run copy:styles && npm run fix:scss-paths",
    "copy:styles": "find react -name '*.scss' -exec sh -c 'mkdir -p \"dist/$(dirname \"{}\")\" && cp \"{}\" \"dist/{}\"' \\;",
    "fix:scss-paths": "find dist/react -name '*.scss' -type f -exec sed -i '' 's|../../scss|../../../scss|g' {} \\;",
    "clean": "rm -rf dist && rm -f .tsbuildinfo",
    "prepublishOnly": "npm run build:lib",
    "start": "next start",
    "lint": "next lint",
    "icon": "node ./cli/icon-scss.js",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy": "npm run pages:build && wrangler pages deploy"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.83.0",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.8",
    "@eslint/js": "^9.8.0",
    "@types/node": "22.10.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "opentype.js": "^1.3.4",
    "prettier": "^3.3.3",
    "sass-embedded": "^1.77.8",
    "scss": "^0.2.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0"
  }
}
